@model WaterCompanyCet47.Web.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Register";
}

<section class="inner-page">
    <div class="container">

        <br /><br />
        <center><h2>Registar Consumidor</h2></center>

        <h4>Consumidor</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="FirstName">Nome</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Apelido</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="UserName">Username</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Palavra-Passe</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Confirm">Confirmar Palavra-Passe</label>
                        <input asp-for="Confirm" type="password" class="form-control" />
                        <span asp-validation-for="Confirm" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Registar Novo Consumidor" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        @if(ViewBag.Message != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                }
            </script>
        }

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }


    </div>
</section>

  </main><!-- End #main -->

