@model WaterCompanyCet47.Web.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Register";
}



<main id="main">

    <section class="inner-page">
        <div class="container">

            <br /><br />
            <center><h2>Registar Consumidor</h2></center>

            <div>
                <h4>Novo Consumidor</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <b><label asp-for="FirstName" class="control-label"></label></b>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <b><label asp-for="LastName" class="control-label"></label></b>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <b><label asp-for="Nif" class="control-label"></label></b>
                                <input asp-for="Nif" class="form-control" />
                                <span asp-validation-for="Nif" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <b><label asp-for="PhoneNumber" class="control-label"></label></b>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <b><label class="control-label">Username</label></b>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <b><label class="control-label">Palavra-Passe</label></b>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <b> <label class="control-label">Confirmar Palavra-Passe</label></b>
                                <input asp-for="Confirm" type="password" class="form-control" />
                                <span asp-validation-for="Confirm" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <b> <input type="submit" value="Criar" class="btn btn-primary" /></b>
                                <a asp-action="Index" class="btn btn-success">Voltar</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.Message");
                }
    </script>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
