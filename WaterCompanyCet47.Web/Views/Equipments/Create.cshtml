@*@model WaterCompanyCet47.Web.Data.Entities.Equipment*@
@model WaterCompanyCet47.Web.Models.AddEquipmentViewModel


@{
    ViewData["Title"] = "Create";
}

<section class="inner-page">
    <div class="container">
        <br /><br />
        <center><h2>Registar Contador</h2></center>

        <h4>Contador</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="WaterMetering" class="control-label"></label>
                        <input asp-for="WaterMetering" class="form-control" />
                        <span asp-validation-for="WaterMetering" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Installation" class="control-label"></label>
                        <input asp-for="Installation" class="form-control" />
                        <span asp-validation-for="Installation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Criar Contador" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-success">Listagem de Contador</a>
                    </div>
                </form>
            </div>
        </div>

        <div>

        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

    </div>
</section>

  </main><!-- End #main -->
